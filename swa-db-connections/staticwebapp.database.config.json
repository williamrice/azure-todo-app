{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "AccountEndpoint=https://todo-data.documents.azure.com:443/;AccountKey=ohZnlt4PxjZ57qFEH41HEVHTNme8tTB8GoKHuouUqym4y3Zm3eOv16CH9wCbXHIQ4XVbRiv7XeFDACDbZFemUA==;",
    "options": {
      "database": "ToDoList",
      "container": "Items",
      "schema": "staticwebapp.database.schema.gql"
    }
  },
  "runtime": {
    "rest": {
      "enabled": false,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
"ToDo": {
      "source": "Items",
      "properties": {
        "id": {
          "type": "string",
          "primary-key": true
        },
        "text": {
          "type": "string"
        ,
      "completed": {
          "type": "boolean"
        }}
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ]
    }

  }
}